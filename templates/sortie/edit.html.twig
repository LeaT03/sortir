{% extends 'base.html.twig' %}

{% block title %} Modifier Sortie | {{ parent() }} {% endblock %}

{% block body %}
    <h1>Modifier une sortie</h1>
    <div id="formCreate">
        {{ form_start(sortieForm) }}
        {% include 'sortie/form_sortie.html.twig' %}
        <div class="form-actions">
            <a href="{{ path('sortie_delete', {'id': sortie.id}) }}" class="btn btn-danger"
               onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette sortie ?');">Supprimer la sortie</a>
        </div>
        {{ form_end(sortieForm) }}
    </div>
{% endblock %}


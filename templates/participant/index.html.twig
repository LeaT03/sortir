{% extends 'base.html.twig' %}

{% block title %}
Profil : | {{ parent() }}
{% endblock %}

{% block body %}
    <div style="text-align: center; margin-right: 500px; margin-left: 500px">

        <h1 style="line-height: 2.5;"> Profil de {{ participant.nom }} {{ participant.prenom }} :</h1>

        {% for error in participantsForm.vars.errors %}
            <div class="alert alert-danger">{{ error.message }}</div>
        {% endfor %}

        {{ form_start(participantsForm) }}

            <p>{{ form_row(participantsForm.pseudo) }}</p>
            <p>{{ form_row(participantsForm.nom) }}</p>
            <p>{{ form_row(participantsForm.prenom) }}</p>
            <p>{{ form_row(participantsForm.telephone) }}</p>
            <p>{{ form_row(participantsForm.email) }}</p>
            <p>{{ form_row(participantsForm.password) }}</p>
            <p>{{ form_row(participantsForm.campus) }}</p>

        <button class="btn btn-primary" href="{{ path('app_participant_profil') }}" type="submit" style="margin-bottom: 30px; margin-top: 5px">Enregisrer</button>

        <button  class="btn btn-danger" href="/" type="reset" style="margin-bottom: 30px; margin-top: 5px">Annuler</button>
        {{ form_end(participantsForm) }}

    </div>
{% endblock %}
